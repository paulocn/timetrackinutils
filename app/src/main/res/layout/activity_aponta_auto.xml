<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="ciandt.timetrackinutils.ApontaAutoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top">


        <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fundo_tt" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:background="@drawable/relogio_tt"
            android:layout_alignTop="@id/imageView"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@drawable/ponteiros_tt"
            android:layout_alignTop="@id/imageView2"
            android:layout_alignBottom="@id/imageView2"
            android:layout_alignLeft="@id/imageView2"
            android:layout_alignRight="@id/imageView2"
            android:layout_centerHorizontal="true" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:background="@drawable/ponteiros_tt_2"
            android:layout_alignTop="@id/imageView2"
            android:layout_alignBottom="@id/imageView2"
            android:layout_alignLeft="@id/imageView2"
            android:layout_alignRight="@id/imageView2"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</FrameLayout>
